{
  "info": {
    "name": "FunctionX API - minimal",
    "_postman_id": "functionx-minimal",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Admin\",\n  \"email\": \"test@gmail.com\",\n  \"password\": \"SecretPassword123!\",\n  \"role\": \"admin\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/register",
          "host": ["{{base_url}}"],
          "path": ["api","auth","register"]
        }
      }
    },
    {
      "name": "Auth - Login (save token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200 or 201\", function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200,201]);",
              "});",
              "",
              "try {",
              "    var json = pm.response.json();",
              "    if (json.access_token) {",
              "        pm.environment.set('jwt', json.access_token);",
              "        console.log('Saved jwt to environment');",
              "    } else if (json.token) {",
              "        pm.environment.set('jwt', json.token);",
              "    }",
              "} catch (e) {",
              "    console.log('No JSON response or parse error', e);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@gmail.com\",\n  \"password\": \"SecretPassword123!\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api","auth","login"]
        }
      }
    },
    {
      "name": "Auth - Me (protected)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/me",
          "host": ["{{base_url}}"],
          "path": ["api","auth","me"]
        }
      }
    }
    ,
    {
      "name": "Auth - Forgot (request OTP)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"test@gmail.com\"\n}" },
        "url": { "raw": "{{base_url}}/api/auth/forgot", "host": ["{{base_url}}"], "path": ["api","auth","forgot"] }
      }
    },
    {
      "name": "Auth - Verify OTP",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"test@gmail.com\",\n  \"otp\": \"123456\"\n}" },
        "url": { "raw": "{{base_url}}/api/auth/verify-otp", "host": ["{{base_url}}"], "path": ["api","auth","verify-otp"] }
      }
    },
    {
      "name": "Auth - Reset Password",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"test@gmail.com\",\n  \"reset_token\": \"<paste_token_here>\",\n  \"password\": \"NewPass123!\"\n}" },
        "url": { "raw": "{{base_url}}/api/auth/reset", "host": ["{{base_url}}"], "path": ["api","auth","reset"] }
      }
    }
  ]
}
